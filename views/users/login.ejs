<% layout("./layouts/boilerplate") %>

<div class="row mt-3 mb-3">
    <h3 class="col-6 offset-3 mb-3"><b>Login to Tripzone</b></h3>
  <div class="col-6 offset-3">

    <form action="/login" method="post" novalidate class="needs-validation">

      <div class="mb-3">
        <label for="username" class="form-label"><b>Username :</b></label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
      </div>

       <div class="mb-3">
        <label for="password" class="form-label"><b>Password :</b></label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>
     
      <button class="btn btn-dark signbtn" type="submit">Login</button>
    </form>
  </div>
</div>
