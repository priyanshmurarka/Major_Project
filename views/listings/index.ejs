<% layout("./layouts/boilerplate") %>

<body>

  <!-- Category bar -->
  <div id="filters" class="mt-3 mb-3">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-city"></i>></div>
      <p>Iconic Cities</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beaches</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Pools</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>

    <!-- Tax Toggle -->
    <div class="tax-toggle mb-3">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="switchCheckDefault"
        />
        <label class="form-check-label" for="switchCheckDefault"
          >Display Total after Taxes</label
        >
      </div>
    </div>
  </div>

  <!-- All Listings -->
  <div class="mt-3 row row-cols-lg-3 row-cols-md-2 row-cols-1">
    <% for(let listing of allListings){ %>
    <a href="/listings/<%= listing.id %>" class="show_listing">
      <div class="card col listing-card">
        <img
          style="height: 20rem"
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt=" <%=listing.image.filename%>"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body mt-2">
          <p class="card-text">
            <b> <%= listing.title %></b>
            <br />
            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
            <i class="tax-percent">&nbsp;+ 18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>

  <!-- Toggle Functionality -->
  <script src="/js/toggle.js"></script>
</body>
